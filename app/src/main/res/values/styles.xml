<resources>
    <!-- Alap téma Material Components DayNight -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Alap háttér -->
        <item name="android:windowBackground">@color/soft_cream</item>
        <item name="android:statusBarColor">@color/sunset_orange</item>
        <item name="android:navigationBarColor">@color/earth_brown</item>

        <!-- Alap szöveg színek -->
        <item name="android:textColorPrimary">@color/forest_green</item>
        <item name="android:textColorSecondary">@color/sky_blue</item>

        <!-- Gombok és kiemelések -->
        <item name="colorPrimary">@color/sky_blue1</item>
        <item name="colorPrimaryDark">@color/earth_brown</item>
        <item name="colorAccent">@color/coral</item>

        <!-- Button stílus -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>

        <item name="android:windowNoTitle">true</item> <!-- Eltünteti a címsort -->
        <item name="android:windowActionBar">false</item> <!-- Eltünteti az ActionBar-t -->
    </style>

    <!-- Gombok stílusa -->
    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/soft_cream</item>
    </style>

    <!-- Kiemelt szövegek -->
    <style name="TextStyleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/forest_green</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/sky_blue</item>
    </style>

</resources>
